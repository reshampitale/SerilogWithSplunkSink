@{

    <!DOCTYPE html>

    <html>
    <head>
        <title></title>
        <meta charset="utf-8" />
        @*<link href="Content/bootstrap.min.css" rel="stylesheet" />*@
        <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
        @*<script src="scripts/Feedback.js"></script>*@
        <script>
            $(document).ready(function () {
                $("#btn_feedback").click(function (e) {
                    e.preventDefault();

                    $.ajax({
                        url: "api/Feedback/Message",
                        type: "POST",
                        data: { Message: $("#TxtFeddback").val() },
                        success: function (data) {
                            $("#TxtFeddback").val('')
                            $("#responediv").html(data);
                        }
                    })
                })

            }) 
        </script>
      
    </head>
    <body>
        <form>

            <div class="container">
                <h3 style="font-style:italic">Feedback</h3>
                <br />
                <div class="row">
                    <div class="form-group">
                        <label>Message:</label>
                        <textarea id="TxtFeddback"></textarea>
                    </div>
                </div>
                <br />

                <button id="btn_feedback" class="btn btn-default">Submit</button>
                <br />
                <br />
                <div id="responediv" class="row" style="color:green">

                </div>
            </div>
        </form>
    </body>
</html>

}
